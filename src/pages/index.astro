---
import FeedLayout from "../layouts/Feed.astro"
import { ROUTES } from '../constants/routes.js'
import { getAllPageData } from '../utils/getPageData'

const data = await getAllPageData()

const page = {
  ...data,
  route: ROUTES.posts.href,
}

---
<FeedLayout
  title="The feed"
  ogtitle="The feed of Jhey Tompkins"
  description="Thoughts and creations from the mind of Jhey Tompkins"
  oggradient="8"
  page={page}
/>